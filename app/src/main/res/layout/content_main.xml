<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.idekreasi.forecast.MainActivity"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/orangePrimary"
        android:padding="10dp">

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lokasi"
            android:textColor="@android:color/white"
            android:textSize="22dp"/>


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_balance_sunny"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="160dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/temperature_celsius"
            android:tint="#FFF"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tgl"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp" />

        <!-- LINGKARAN PERTAMA -->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="33dp"
            android:tint="#FFF"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/oil_temperature"
            android:tint="#FF9800"
            android:layout_gravity="bottom"
            android:layout_marginLeft="87dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1024"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="57dp"
            android:layout_marginBottom="15dp"/>

        <!-- LINGKARAN KEDUA -->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="33dp"
            android:tint="#FFF"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/weather_windy"
            android:tint="#FF9800"
            android:layout_gravity="bottom"
            android:layout_marginLeft="147dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="15dp"/>

        <!-- LINGKARAN KETIGA -->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="14dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom"
            android:layout_marginLeft="200dp"
            android:layout_marginBottom="33dp"
            android:tint="#FFF"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/apple_mobileme"
            android:tint="#FF9800"
            android:layout_gravity="bottom"
            android:layout_marginLeft="205dp"
            android:layout_marginBottom="39dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56%"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="185dp"
            android:layout_marginBottom="15dp"/>

        <!-- LINGKARAN KEEMPAT -->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="75dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/circle"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="33dp"
            android:tint="#FFF"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/water"
            android:tint="#FF9800"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="39dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="76dp"
            android:layout_marginBottom="15dp"/>

    </FrameLayout>

    <!-- CUACA HARI SELANJUTNYA -->

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame">


    </LinearLayout>

</RelativeLayout>
